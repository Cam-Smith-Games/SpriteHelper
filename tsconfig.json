{
    "compilerOptions": {
      "lib": [ "es6", "dom", "es2017", "esnext" ],
      "module": "esnext",
      "target": "es2017",
  
      // WARNINGS
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noUnusedParameters": true,
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "alwaysStrict": true,
      "noUnusedLocals": true,

      "allowSyntheticDefaultImports": true,
      "outDir": "out",

      "sourceMap": true
    } 
    

  }